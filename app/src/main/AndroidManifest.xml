<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tiringbring.moneymanager">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoround"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.DailyTransactionsActivity"></activity>
        <activity
            android:name=".Activity.BottomNavigationActivity"
            android:label="@string/title_activity_bottom_navigation" />
        <activity
            android:name=".Activity.AddTransactionActivity"
            android:exported="true"
            android:label="Add transaction"
            android:parentActivityName=".Activity.StartActivity" />
        <activity android:name=".Activity.FileExplorerActivity" />
        <activity android:name=".Activity.ImportExportActivity" />
        <activity android:name=".Activity.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AddExpenseActivity"
            android:exported="true"
            android:label="Add Expense"
            android:parentActivityName=".Activity.StartActivity" />
        <activity
            android:name=".Activity.ExpenseListActivity"
            android:exported="true"
            android:label="expens"
            android:parentActivityName=".Activity.StartActivity" />
        <activity
            android:name=".Activity.SettingActivity"
            android:label="Settings"
            android:parentActivityName=".Activity.StartActivity" />

        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />

        <receiver
            android:name=".Notification.Notification"
            android:process=":remote" />
    </application>

</manifest>