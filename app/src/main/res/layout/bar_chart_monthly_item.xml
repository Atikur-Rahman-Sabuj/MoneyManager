<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/allContainer"
    android:layout_width="wrap_content"
    android:layout_height="241dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/incomeBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/incomeBack2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIncomeAmount"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:text="30"
                    android:textAlignment="center"
                    android:textSize="8sp" />


                <LinearLayout
                    android:id="@+id/income"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/myColorPrimary"
                    android:orientation="horizontal"></LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:lineSpacingExtra="8sp"
                android:text="Jan 19"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/expenseBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/expense"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bar_bottom"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tvExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20"
            android:textAlignment="center"
            android:textSize="8sp" />

    </LinearLayout>
</LinearLayout>